            <Button fx:id="homeBtn" mnemonicParsing="false" onAction="#switchToMainScene" prefHeight="46.0" prefWidth="76.0" style="-fx-background-color: #b0c4de;" text="Home" />
         </children>
      </HBox>
   </children>
</AnchorPane>
