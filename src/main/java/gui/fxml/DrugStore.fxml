<AnchorPane prefHeight="514.0" prefWidth="701.0" style="-fx-background-color: #778899;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.Controller">
